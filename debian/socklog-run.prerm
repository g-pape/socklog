#! /bin/sh
set -e

case "$1" in
  remove|deconfigure|failed-upgrade)
    for i in unix klog inet notify ucspi-tcp; do
      if test -h /var/service/socklog-$i; then
        mv /var/service/socklog-$i /var/service/.socklog-$i
        svwaitdown -vxt14 /var/service/.socklog-$i
        rm -f /var/service/.socklog-$i
      fi
    done
  ;;
esac

exit 0
