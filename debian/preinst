#! /bin/sh
# preinst script for socklog
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
#
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
  install)
    if ! egrep '^log\:' /etc/passwd >/dev/null; then
      cat <<-EOT
No user 'log' found.

This script will run the following command; without adding the user, the
socklog services cannot run on this system.

adduser --system --home /var/log/socklog --no-create-home --ingroup adm log

EOT
      echo -n 'Will proceed in 5 seconds, press Ctrl-C to abort... '
      sleep 5s
      echo; echo
      adduser --system --home /var/log/socklog --no-create-home \
        --ingroup adm log
    fi
    ;;
  upgrade)
    ;;
  abort-upgrade)
    ;;
  *)
    echo "preinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
